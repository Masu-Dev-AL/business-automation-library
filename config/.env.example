# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=YOUR_AWS_ACCOUNT_ID

# S3 Buckets (use your own unique suffix)
S3_SUFFIX=yoursuffix2026
S3_BUCKET_INVOICES=invoice-automation-incoming-yoursuffix2026
S3_BUCKET_PROCESSED=invoice-automation-processed-yoursuffix2026
S3_BUCKET_FAILED=invoice-automation-failed-yoursuffix2026
S3_BUCKET_BEDROCK=invoice-automation-blueprint-yoursuffix2026

# RDS Database
DB_HOST=your-rds-endpoint.us-east-1.rds.amazonaws.com
DB_PORT=5432
DB_NAME=invoice_automation
DB_USER=postgres
DB_PASSWORD=YOUR_STRONG_PASSWORD

# SNS Topic (create via AWS CLI)
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:YOUR_ACCOUNT_ID:InvoiceApprovalNotifications

# API Gateway (set after creating the API)
APPROVAL_API_ENDPOINT=https://YOUR_API_ID.execute-api.us-east-1.amazonaws.com/prod/approve

# Bedrock Configuration (set after creating the project)
BEDROCK_PROJECT_ARN=arn:aws:bedrock:us-east-1:YOUR_ACCOUNT_ID:data-automation-project/YOUR_PROJECT_ID
BEDROCK_PROFILE_ARN=arn:aws:bedrock:us-east-1:YOUR_ACCOUNT_ID:data-automation-profile/us.data-automation-v1
